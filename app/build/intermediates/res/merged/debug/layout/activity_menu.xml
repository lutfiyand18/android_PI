<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.lutfi.menuprogram.Menu"
    android:background="@drawable/images">

    <Button android:layout_height="wrap_content"
        android:layout_y="82dp"
        android:layout_width="match_parent"
        android:id="@+id/btnperkembangan"
        android:text="Perkembangan AKG Dewasa"
        android:layout_x="-2dp"
        android:background="#175bfb"
        android:textColor="#ffffff"></Button>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_y="146dp"
        android:id="@+id/btninfo"
        android:text="informasi gizi"
        android:background="#175bfb"
        android:textColor="#ffffff"
        android:layout_x="-1dp"></Button>
    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_y="207dp"
        android:id="@+id/btndaftarmakanan"
        android:text="Daftar makanan penukar"
        android:layout_x="0dp"
        android:background="#175bfb"
        android:textColor="#ffffff"></Button>

    <TextView
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SEPUTAR GIZI"
        android:id="@+id/textView"
        android:layout_x="130dp"
        android:layout_y="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bantuan"
        android:id="@+id/btnbantuan"
        android:layout_x="16dp"
        android:layout_y="437dp"
        android:textColor="#fc0505"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kembali"
        android:id="@+id/btnkembali"
        android:layout_x="257dp"
        android:layout_y="444dp"
        android:textColor="#fc0505"/>

</AbsoluteLayout>
